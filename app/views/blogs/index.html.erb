<p id="notice"><%= notice %></p>

<div class="toppage">
<h1 class="top">ヘルパー予定表</h1>
<br>

<div class="row">
<div class="col-md-4">
  <div class="schedule">次の支援一覧</div>
<table class="table">
  <thead class="thead-light">
    <tr>
      <th>事業所</th>
      <th>日時</th>
      <th>支援区分</th>
    </tr>
  </thead>

  <tbody>
    <%= @blogs.each do |blog| %>
      <tr>
        <td><%= blog.start_time.strftime("%m-%d-%-H:%M") %></td>
        <td><%= blog.division %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= form_with(model: @blog, local: true) do |form| %>

  <div class="division">
    <div class="form-tag">支援区分</div>
    <%= form.text_field :division %>
  </div>

  <div class="time">
    <div class="form-tag">時間</div>
    <%= form.datetime_select :start_time %>
  </div>

  <div class="submit"><%= form.submit %></div>
<% end %>
</div>

<br>
<br>
<div class="col-md-8">
<%= month_calendar events: @blogs do |date, blogs| %>
  <%= date.day %>
  <%= blogs.each do |blog| %>
    <div><%= link_to blog.office_name, blog %></div>
  <% end %>
<% end %>
</div>
</div>
</div>