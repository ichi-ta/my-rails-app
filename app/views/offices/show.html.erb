<% provide(:title, @office.name) %>
<div>
<%= link_to 'back', blogs_path%>
</div>
<h1>
<%= @office.name %>
</h1>
<%= link_to "事業所の削除", @office, method: :delete, data: { confirm: '本当に削除しますか？' } %>
<table>
  <tr>
    <th align="right">電話番号：</th>
    <td><%= @office.phone_number %></td>
  </tr>
  <tr>
    <th align="right">住所：</th>
    <td><%= @office.address %></td>
  </tr>
</table>

<div class="com-md-8">
<% if @office.blogs.any? %>
  <h3>支援数 (<%= @office.blogs.count %>)</h3>
  <ol class="blogs"><%= render @blogs %></ol>
  <%= will_paginate @blogs %>
<% end %>
</div>