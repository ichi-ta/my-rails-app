<% provide(:title, @office.name) %>
<h1><%= @office.name %></h1>

<table>
  <tr>
    <th align="right">電話番号：</th>
    <td><%= @office.phone_number %></td>
  </tr>
  <tr>
    <th align="right">住所：</th>
    <td><%= @office.address %></td>
  </tr>
</table>

<div class="com-md-8">
<% if @office.blogs.any? %>
  <h3>支援数 (<%= @office.blogs.count %>)</h3>

  <ol class="blogs">
    <%= render @all_blogs %>
  </ol>
  <%= will_paginate @all_blogs %>
<% end %>
</div>

<%= link_to @office, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "operator" do %>
  <button style="background-color:salmon;"><b>事業所の削除</b></button>
<% end %>
<%= link_to blogs_path, class: "operator" do %>
  <button>戻る</button>
<% end %>